<Window x:Class="PartyHard.Views.Windows.AddServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartyHard.Views.Windows"
        mc:Ignorable="d"
            Title="Добавить услугу" Height="300" Width="600"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление услуги" FontSize="25" FontWeight="Bold" Margin="10"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Имя услуги:"/>
            <TextBox Name="ServiceNameTb" Margin="10" Width="300"/>
            <Button Name="AddServiceBtn" Content="Добавить" Margin="10" Click="AddServiceBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
