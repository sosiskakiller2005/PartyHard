<Page x:Class="PartyHard.Views.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PartyHard.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="800"
      Title="MenuPage">

    <StackPanel VerticalAlignment="Center">
        <Button Name="AddOrderBtn" Content="Сделать заказ" Click="AddOrderBtn_Click"/>
        <Border Height="20"/>
        <Button Name="OrdersBtn" Content="Просмотр заказов" Click="OrdersBtn_Click"/>
        <Border Height="20"/>
        <Button Name="AddMasterClassBtn" Click="AddMasterClassBtn_Click">
            <Button.Content>
                <TextBlock Text="Добавить мастеркласс" Foreground="White" FontSize="20"/>
            </Button.Content>
        </Button>
        <Border Height="20"/>
        <Button Name="AddServiceBtn" Content="Добавить услугу" Click="AddServiceBtn_Click"/>
        <Border Height="20"/>
        <Button Name="CloseBtn" Content="Выйти" Click="CloseBtn_Click"/>
        <Border Height="20"/>
    </StackPanel>
</Page>
